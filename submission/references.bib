title = {{The seasonal structure of microbial communities in the Western English Channel}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/19659500 http://doi.wiley.com/10.1111/j.1462-2920.2009.02017.x},
volume = {11},
year = {2009}
}
@article{Natarajan2016,
