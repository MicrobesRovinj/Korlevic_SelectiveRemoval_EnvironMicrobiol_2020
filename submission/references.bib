title = {{Species-level resolution of 16S rRNA gene amplicons sequenced through the MinION™ portable nanopore sequencer.}},
url = {https://academic.oup.com/gigascience/article-lookup/doi/10.1186/s13742-016-0111-z http://www.ncbi.nlm.nih.gov/pubmed/26823973 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4730766},
