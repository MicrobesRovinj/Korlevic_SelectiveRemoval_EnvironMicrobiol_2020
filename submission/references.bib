title = {{High-Level Culturability of Epiphytic Bacteria and Frequency of Biosurfactant Producers on Leaves.}},
url = {http://aem.asm.org/lookup/doi/10.1128/AEM.01751-16 http://www.ncbi.nlm.nih.gov/pubmed/27474719 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5038025},
