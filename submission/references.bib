title = {{Characterizing and measuring bias in sequence data}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23718773 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4053816 http://genomebiology.biomedcentral.com/articles/10.1186/gb-2013-14-5-r51},
