pages = {206--216},
publisher = {Elsevier},
title = {{Long-term changes in heterotrophic prokaryotes abundance and growth characteristics in the northern Adriatic Sea}},
url = {https://www.sciencedirect.com/science/article/pii/S0924796310000977},
volume = {82},
year = {2010}
}
