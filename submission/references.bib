url = {http://www.ncbi.nlm.nih.gov/pubmed/15870315 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC1087563 http://aem.asm.org/cgi/doi/10.1128/AEM.71.5.2303-2309.2005},
