pages = {14--24},
pmid = {23125465},
title = {{Soil metaproteomics – Comparative evaluation of protein extraction protocols}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23125465 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3413887 http://linkinghub.elsevier.com/retrieve/pii/S0038071712002052},
