title = {{Sulfurimonas autotrophica gen. nov., sp. nov., a novel sulfur-oxidizing  -proteobacterium isolated from hydrothermal sediments in the Mid-Okinawa Trough}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/14657107 http://ijs.microbiologyresearch.org/content/journal/ijsem/10.1099/ijs.0.02682-0},
volume = {53},
