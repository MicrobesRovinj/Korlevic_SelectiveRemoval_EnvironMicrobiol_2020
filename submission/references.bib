pages = {285--304},
pmid = {20668488},
title = {{Comparative metagenomics of bathypelagic plankton and bottom sediment from the Sea of Marmara}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/20668488 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3105693 http://www.nature.com/articles/ismej2010113},
volume = {5},
