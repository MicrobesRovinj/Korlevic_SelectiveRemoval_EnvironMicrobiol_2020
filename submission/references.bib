month = {apr},
pages = {e3246},
pmid = {28462046},
title = {{Microbial communities in sediment from Zostera marina patches, but not the Z. marina leaf or root microbiomes, vary in relation to distance from patch edge.}},
url = {https://peerj.com/articles/3246 http://www.ncbi.nlm.nih.gov/pubmed/28462046 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5410140},
