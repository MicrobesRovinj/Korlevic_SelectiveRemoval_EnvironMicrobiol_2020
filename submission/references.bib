number = {6},
pages = {e11285},
pmid = {20585654},
title = {{Characterization of coastal urban watershed bacterial communities leads to alternative community-based indicators.}},
url = {http://dx.plos.org/10.1371/journal.pone.0011285 http://www.ncbi.nlm.nih.gov/pubmed/20585654 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2890573},
