month = {may},
pages = {S67--S75},
publisher = {Elsevier Masson},
title = {{Bacterioplankton dynamics in the Mondego estuary (Portugal)}},
url = {https://www.sciencedirect.com/science/article/pii/S1146609X0300016X},
volume = {24},
year = {2003}
}
@article{Piccini2006,
abstract = {We investigated seasonal differences in community structure and activity (leucine incorporation) of the planktonic bacterial assemblage in the freshwater and brackish-water zones of a shallow coastal lagoon of the southwestern Atlantic Ocean. Alphaproteobacteria formed the dominant microbial group in both zones throughout the sampling period. After an intrusion of marine water, members of the SAR11 lineage became abundant in the brackish-water zone. These bacteria were apparently distributed over the lagoon during the following months until they constituted almost 30{\%} of all prokaryotic cells at both sampling sites. At the first sampling date (March 2003) a single alphaproteobacterial species unrelated to SAR11, Sphingomonas echinoides, dominated the microbial assemblages in both zones of the lagoon concomitantly with a bloom of filamentous cyanobacteria. Pronounced maxima of leucine incorporation were observed once in each zone of the lagoon. In the freshwater zone, this highly active microbial assemblage was a mix of the typical bacteria lineages expected in aquatic systems. By contrast, a single bacterial genotype with {\textgreater}99{\%} similarity to the facultative pathogen gammaproteobacterial species Stenotrophomonas maltophilia formed {\textgreater}90{\%} of the bacterial assemblage ({\textgreater}10(7) cell ml(-1)) in the brackish-water zone at the time point of highest bacterial leucine incorporation. Moreover, these bacteria were equally dominant, albeit less active, in the freshwater zone. Thus, the pelagic zone of the studied lagoon harbored repeated short-term blooms of single bacterial species. This finding may have consequences for environmental protection.},
author = {Piccini, C. and Conde, D. and Alonso, C. and Sommaruga, R. and Pernthaler, J.},
