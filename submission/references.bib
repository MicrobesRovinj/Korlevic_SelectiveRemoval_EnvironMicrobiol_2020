publisher = {Frontiers},
title = {{Stream microbial diversity in response to environmental changes: review and synthesis of existing research}},
url = {http://www.frontiersin.org/Aquatic{\_}Microbiology/10.3389/fmicb.2015.00454/abstract},
volume = {6},
year = {2015}
}
