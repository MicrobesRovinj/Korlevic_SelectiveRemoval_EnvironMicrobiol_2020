journal = {The ISME Journal},
month = {mar},
number = {3},
pages = {364--373},
pmid = {19020557},
title = {{Gene transfer agent (GTA) genes reveal diverse and dynamic Roseobacter and Rhodobacter populations in the Chesapeake Bay}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/19020557 http://www.nature.com/articles/ismej2008115},
volume = {3},
year = {2009}
}
