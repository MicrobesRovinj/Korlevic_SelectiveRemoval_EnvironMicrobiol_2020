number = {19},
pages = {7052--7057},
pmid = {18467493},
title = {{Diverse syntrophic partnerships from deep-sea methane vents revealed by direct cell capture and metagenomics.}},
url = {http://www.pnas.org/cgi/doi/10.1073/pnas.0711303105},
volume = {105},
year = {2008}
}
