title = {{Culture-dependent characterization of cyanobacterial diversity in the intertidal zones of the Portuguese coast: A polyphasic study}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22277323 http://linkinghub.elsevier.com/retrieve/pii/S0723202011002372},
volume = {35},
