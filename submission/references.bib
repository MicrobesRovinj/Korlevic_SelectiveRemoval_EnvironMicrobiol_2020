issn = {0099-2240},
journal = {Applied and Environmental Microbiology},
month = {nov},
number = {11},
pages = {5210--5218},
pmid = {11679347},
title = {{Comparison of Cellular and Biomass Specific Activities of Dominant Bacterioplankton Groups in Stratified Waters of the Celtic Sea}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/11679347 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC93292 http://aem.asm.org/cgi/doi/10.1128/AEM.67.11.5210-5218.2001},
volume = {67},
year = {2001}
