keywords = {Algorithms,Bioinformatics,Combinatorial Libraries,Computational Biology/Bioinformatics,Computer Appl. in Life Sciences,Microarrays},
month = {dec},
number = {1},
pages = {559},
publisher = {BioMed Central},
title = {{WGCNA: an R package for weighted correlation network analysis}},
url = {http://bmcbioinformatics.biomedcentral.com/articles/10.1186/1471-2105-9-559},
volume = {9},
year = {2008}
}
