publisher = {Academic Press},
title = {{Phytoplankton driven distribution of dissolved and particulate lipids in a semi-enclosed temperate sea (Mediterranean): Spring to summer situation}},
url = {https://www.sciencedirect.com/science/article/pii/S0272771411001375},
volume = {93},
