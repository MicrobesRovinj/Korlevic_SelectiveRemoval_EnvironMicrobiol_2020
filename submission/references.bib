journal = {Applied and environmental microbiology},
month = {dec},
number = {24},
pages = {8803--8812},
pmid = {23064339},
title = {{Microbial community response during the iron fertilization experiment LOHAFEX.}},
url = {http://aem.asm.org/lookup/doi/10.1128/AEM.01814-12},
volume = {78},
year = {2012}
}
