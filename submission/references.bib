journal = {Systematic and applied microbiology},
month = {jun},
number = {4},
pages = {243--259},
pmid = {21498017},
title = {{A single-cell sequencing approach to the classification of large, vacuolated sulfur bacteria.}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0723202011000580},
volume = {34},
year = {2011}
}
