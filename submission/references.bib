journal = {PloS one},
month = {apr},
number = {4},
pages = {e94110},
pmid = {24718653},
title = {{Phytoplankton diversity and community composition along the estuarine gradient of a temperate macrotidal ecosystem: combined morphological and molecular approaches.}},
url = {http://dx.plos.org/10.1371/journal.pone.0094110 http://www.ncbi.nlm.nih.gov/pubmed/24718653 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3981767},
