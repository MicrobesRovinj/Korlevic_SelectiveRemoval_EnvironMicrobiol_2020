title = {{Exploring the Impacts of Anthropogenic Disturbance on Seawater and Sediment Microbial Communities in Korean Coastal Waters Using Metagenomics Analysis.}},
url = {http://www.mdpi.com/1660-4601/14/2/130 http://www.ncbi.nlm.nih.gov/pubmed/28134828 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5334684},
