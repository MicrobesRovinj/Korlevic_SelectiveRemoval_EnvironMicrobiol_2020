journal = {PloS one},
month = {oct},
number = {10},
pages = {e76724},
pmid = {24167548},
title = {{Ultradeep 16S rRNA sequencing analysis of geographically similar but diverse unexplored marine samples reveal varied bacterial community composition.}},
url = {http://dx.plos.org/10.1371/journal.pone.0076724 http://www.ncbi.nlm.nih.gov/pubmed/24167548 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3805540},
