pmid = {17825072},
title = {{Different bacterial communities associated with the roots and bulk sediment of the seagrass Zostera marina}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/17825072 https://academic.oup.com/femsec/article-lookup/doi/10.1111/j.1574-6941.2007.00373.x},
volume = {62},
