keywords = {CTAB,Coffea,Corymbia,DNA extraction,Next-generation sequencing},
number = {1},
pages = {21},
pmid = {25053969},
title = {{Protocol: a simple method for extracting next-generation sequencing quality genomic DNA from recalcitrant plant species.}},
