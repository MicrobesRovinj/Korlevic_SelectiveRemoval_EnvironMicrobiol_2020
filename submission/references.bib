doi = {10.1186/s13568-015-0117-4},
issn = {2191-0855},
journal = {AMB Express},
month = {dec},
number = {1},
pages = {117},
pmid = {26080793},
title = {{Anaerolineaceae and Methanosaeta turned to be the dominant microorganisms in alkanes-dependent methanogenic culture after long-term of incubation.}},
url = {http://www.amb-express.com/content/5/1/37 http://www.ncbi.nlm.nih.gov/pubmed/26080793 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4469597},
volume = {5},
year = {2015}
