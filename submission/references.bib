month = {feb},
number = {2},
pages = {76--87},
pmid = {26871866},
title = {{Picoplankton Bloom in Global South? A High Fraction of Aerobic Anoxygenic Phototrophic Bacteria in Metagenomes from a Coastal Bay (Arraial do Cabo--Brazil).}},
url = {http://online.liebertpub.com/doi/10.1089/omi.2015.0142 http://www.ncbi.nlm.nih.gov/pubmed/26871866 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4770915},
volume = {20},
