@article{Claesson2012,
abstract = {It is now recognized that the human intestinal microbiota is essential for health, and compositional changes have been linked with obesity, inflammation and diabetes. However, the adult intestinal microbiota is generally stable and comparable between healthy individuals, but at the extremes of life in infancy and old age the gut microbiota is in flux. This study of 178 elderly people with an average age of 78 reveals that diet is the main factor that correlates with both gut microbiota variation and health. The work suggests that by adjusting diet using supplements that promote particular components of the microbiota it may be possible to promote healthier ageing. This is particularly relevant for individuals in long-term residential care, who have microbiota that are significantly less diverse than those of contemporaries who are still living in the broader community.},
