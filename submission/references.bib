journal = {Microbiome},
keywords = {Gut microbiota,LC-MS/MS,Mass spectrometry,Metaproteomics,Microbial community,Mouse,Protein extraction,Proteomic methods,Shotgun proteomics,Single-run liquid chromatography},
month = {dec},
number = {1},
pages = {49},
pmid = {25516796},
title = {{A straightforward and efficient analytical pipeline for metaproteome characterization.}},
url = {http://microbiomejournal.biomedcentral.com/articles/10.1186/s40168-014-0049-2 http://www.ncbi.nlm.nih.gov/pubmed/25516796 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4266899},
